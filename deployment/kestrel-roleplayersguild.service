[Unit]
Description=RoleplayersGuild Web Application

[Service]
WorkingDirectory=/var/www/roleplayersguild
ExecStart=/usr/bin/dotnet /var/www/roleplayersguild/RoleplayersGuild.dll
Restart=always
# Restart service after 10 seconds if the dotnet service crashes:
RestartSec=10
KillSignal=SIGINT
SyslogIdentifier=dotnet-roleplayersguild
User=www-data
Group=www-data
Environment=ASPNETCORE_ENVIRONMENT=Production
Environment=DOTNET_PRINT_TELEMETRY_MESSAGE=false

[Install]
WantedBy=multi-user.target