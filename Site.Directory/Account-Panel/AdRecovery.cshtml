@page
@model RoleplayersGuild.Site.Directory.Account_Panel.AdRecoveryModel
@{
    ViewData["Title"] = "Ad Recovery";
    Layout = "_Layout1Col";
}

<div class="container text-center py-5">
    <h1 class="display-4">Ad Recovery Confirmation</h1>
    @if (Model.IsLoggedIn)
    {
        <p class="lead">Thank you for being a valued subscriber. As long as you are logged in, you will not see ads on the site.</p>
        <p>If you are still seeing ads, please try clearing your browser's cache or contact support.</p>
    }
    else
    {
        <p class="lead">Please log in to your account to disable ads.</p>
        <a asp-page="/Account-Panel/Index" class="btn btn-primary">Log In</a>
    }
</div>