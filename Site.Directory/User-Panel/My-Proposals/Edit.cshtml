@page "{id:int?}"
@model RoleplayersGuild.Site.Directory.User_Panel.My_Proposals.EditMyProposalsModel
@{
    ViewData["Title"] = Model.IsNew ? "New Proposal" : "Edit Proposal";
    Layout = "_Layout2Col";
}

@section cphRightCol {
    <h1>@ViewData["Title"]</h1>
    <hr />
    <form method="post">
        <input type="hidden" asp-for="Input.ProposalId" />
        <div class="mb-3">
            <label asp-for="Input.Title" class="form-label"></label>
            <input asp-for="Input.Title" class="form-control" />
            <span asp-validation-for="Input.Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Input.Description" class="form-label"></label>
            <textarea asp-for="Input.Description" class="form-control" rows="10"></textarea>
            <span asp-validation-for="Input.Description" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Input.ContentRatingId" class="form-label">Content Rating</label>
                <select asp-for="Input.ContentRatingId" asp-items="Model.Ratings" class="form-select"></select>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="Input.StatusId" class="form-label">Status</label>
                <select asp-for="Input.StatusId" asp-items="Model.Statuses" class="form-select"></select>
            </div>
        </div>
        @* Genre checklist and other fields would go here, similar to EditArticle *@

        <div class="row mt-3">
            @if (!Model.IsNew)
            {
                <div class="col-auto">
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">Delete</button>
                </div>
            }
            <div class="col-auto ms-auto">
                <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">Save Proposal</button>
            </div>
        </div>
    </form>

    @if (!Model.IsNew)
    {
        <div class="modal fade" id="deleteModal">@* ... Delete Modal Markup ... *@</div>
    }
}