@page "{id:int}"
@model RoleplayersGuild.Site.Directory.User_Panel.My_Stories.My_Posts.EditMyPostModel
@{
    ViewData["Title"] = "Edit Story Post";
    Layout = "_Layout2Col";
}

@section cphLeftCol {
    @* The left column can be used for post history or chapter navigation. *@
}

@section cphRightCol {
    <h1>Edit Story Post</h1>
    <hr />

    <form method="post">
        <input type="hidden" asp-for="Input.StoryPostId" />
        <input type="hidden" asp-for="Input.StoryId" />

        <div class="mb-3">
            <label class="form-label">Posting as:</label>
            <select asp-for="Input.CharacterId" asp-items="Model.UserCharacters" class="form-select"></select>
        </div>

        <div class="mb-3">
            <label asp-for="Input.PostContent" class="form-label">Post Content</label>
            <textarea asp-for="Input.PostContent" class="form-control" rows="15"></textarea>
        </div>

        <div class="d-flex justify-content-end gap-2">
            <a asp-page="/Community/Stories/Posts" asp-route-id="@Model.Input.StoryId" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-primary">Save Post</button>
        </div>
    </form>
}
