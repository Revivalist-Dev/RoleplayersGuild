@page "{id:int?}"
@model RoleplayersGuild.Site.Directory.User_Panel.My_Characters.EditMyCharactersModel
@inject RoleplayersGuild.Site.Services.IViteManifest ViteManifest
@{
    ViewData["Title"] = Model.IsNewCharacter ? "New Character" : "Edit Character";
    Layout = "_Layout1Col";
}

<h1>@ViewData["Title"]</h1>
<a class="btn btn-secondary mb-3" asp-page="./Index">Back to My Characters</a>

<div id="character-editor-root" data-character-id="@Model.Input.CharacterId">
    <div class="text-center my-5">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading Editor...</span>
        </div>
    </div>
</div>

@section Scripts {
    @Html.Raw(ViteManifest.GetScriptTag())
    @Html.Raw(ViteManifest.GetStyleTag())
}