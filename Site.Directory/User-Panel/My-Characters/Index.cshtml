@page
@model RoleplayersGuild.Site.Directory.User_Panel.My_Characters.IndexMyCharactersModel
@{
    ViewData["Title"] = "My Characters";
    Layout = "_Layout1Col";
}

<h1>@ViewData["Title"]</h1>

<div class="mb-3">
    <a asp-page="./Edit" class="btn btn-primary">
        <i class="bi bi-plus-circle-fill me-1"></i> New Character
    </a>
</div>

<div class="card">
    <div class="card-body">
        @if (!Model.Characters.Any())
        {
            <p class="text-center">You haven't created any characters yet.</p>
        }
        else
        {
            <ul class="list-group">
                @foreach (var character in Model.Characters)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @character.CharacterDisplayName
                        <a asp-page="./Edit" asp-route-id="@character.CharacterId" class="btn btn-sm btn-outline-secondary">Edit</a>
                    </li>
                }
            </ul>
        }
    </div>
</div>