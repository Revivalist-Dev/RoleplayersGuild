@model RoleplayersGuild.Site.Directory.User_Panel.My_Characters.EditMyCharactersModel

<div class="row g-3">
    <div class="col-lg-8">
        <form method="post" asp-page-handler="BBFrame">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Input.CharacterId" />
            <div class="mb-3">
                <label asp-for="Input.CharacterBio" class="form-label">Profile Content</label>
                <div class="d-flex gap-1 mb-1">
                    <button type="button" class="btn btn-sm btn-outline-secondary" title="Bold" onclick="wrapText('bbframe-editor', '[b]', '[/b]')"><i class="bi bi-type-bold"></i></button>
                    <button type="button" class="btn btn-sm btn-outline-secondary" title="Italic" onclick="wrapText('bbframe-editor', '[i]', '[/i]')"><i class="bi bi-type-italic"></i></button>
                    <button type="button" class="btn btn-sm btn-outline-secondary" title="Underline" onclick="wrapText('bbframe-editor', '[u]', '[/u]')"><i class="bi bi-type-underline"></i></button>
                    <button type="button" class="btn btn-sm btn-outline-secondary" title="Strikethrough" onclick="wrapText('bbframe-editor', '[s]', '[/s]')"><i class="bi bi-type-strikethrough"></i></button>
                    <button type="button" class="btn btn-sm btn-outline-secondary" title="Center" onclick="wrapText('bbframe-editor', '[center]', '[/center]')"><i class="bi bi-text-center"></i></button>
                    <button type="button" class="btn btn-sm btn-outline-secondary" title="Quote" onclick="wrapText('bbframe-editor', '[quote]', '[/quote]')"><i class="bi bi-quote"></i></button>
                </div>
                <textarea id="bbframe-editor" asp-for="Input.CharacterBio" class="form-control" rows="15"></textarea>
            </div>
            <div class="card-footer d-flex justify-content-end bg-transparent px-0">
                <button type="submit" class="btn btn-primary">Save BBFrame</button>
            </div>
        </form>

        <div class="mt-3">
            <label class="form-label">Live Preview</label>
            <div id="bbframe-preview" class="border rounded p-2" style="min-height: 350px; background-color: var(--bs-tertiary-bg);"></div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card mb-3">
            <div class="card-header"><h5 class="mb-0">Manage Inlines</h5></div>
            <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                @if (!Model.ExistingInlines.Any())
                {
                    <p class="text-muted small">No inline images uploaded yet.</p>
                }
                else
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var inline in Model.ExistingInlines)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <img src="@inline.InlineImageUrl" alt="@inline.InlineName" class="img-thumbnail me-2" style="width: 40px; height: 40px; object-fit: cover;" />
                                    <span class="fw-bold">@inline.InlineName</span>
                                    <div class="input-group input-group-sm mt-1">
                                        <input type="text" class="form-control" value="@($"[img={inline.InlineId}]{inline.InlineName}[/img]")" readonly id="inline-code-@inline.InlineId">
                                        <button class="btn btn-outline-secondary" type="button" onclick="copyToClipboard('inline-code-@inline.InlineId')" title="Copy BBCode">
                                            <i class="bi bi-clipboard"></i>
                                        </button>
                                    </div>
                                </div>
                                <form method="post" asp-page-handler="DeleteInline" asp-route-inlineId="@inline.InlineId" onsubmit="return confirm('Are you sure you want to delete this inline image?');">
                                    <input type="hidden" asp-for="Input.CharacterId" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete"><i class="bi bi-trash"></i></button>
                                </form>
                            </li>
                        }
                    </ul>
                }
            </div>
        </div>

        <div class="card">
            <div class="card-header"><h5 class="mb-0">Upload New Inline</h5></div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data" asp-page-handler="UploadInline">
                    <input type="hidden" asp-for="Input.CharacterId" />
                    <div class="mb-3">
                        <label asp-for="InlineUpload.Name" class="form-label">Inline Name</label>
                        <input asp-for="InlineUpload.Name" class="form-control" placeholder="e.g., header_image" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="InlineUpload.Image" class="form-label">Image File</label>
                        <input asp-for="InlineUpload.Image" type="file" class="form-control" />
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-success">Upload</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>