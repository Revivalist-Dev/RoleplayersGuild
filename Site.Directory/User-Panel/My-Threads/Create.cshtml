@page
@model RoleplayersGuild.Site.Directory.User_Panel.My_Threads.CreateNewThreadModel
@{
    ViewData["Title"] = "New Thread";
    Layout = "_Layout2Col";
}

@section cphLeftCol {
    @* This section can be used for participant info or thread options. *@
}

@section cphRightCol {
    <h1>New Thread</h1>
    <hr />

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="Input.Title" class="form-label"></label>
            <input asp-for="Input.Title" class="form-control" />
            <span asp-validation-for="Input.Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Input.ToCharacterIds" class="form-label">To (Character Names)</label>
            <input asp-for="Input.ToCharacterIds" class="form-control" placeholder="Start typing a name..." />
            <div class="form-text">Separate multiple names with a comma.</div>
        </div>

        <div class="mb-3">
            <label asp-for="Input.CharacterId" class="form-label">Send As</label>
            <select asp-for="Input.CharacterId" asp-items="Model.UserCharacters" class="form-select"></select>
        </div>

        <div class="mb-3">
            <label asp-for="Input.Content" class="form-label">Message</label>
            <textarea asp-for="Input.Content" class="form-control" rows="10"></textarea>
            <span asp-validation-for="Input.Content" class="text-danger"></span>
        </div>

        <div class="text-end">
            <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-primary">Create Thread</button>
        </div>
    </form>
}