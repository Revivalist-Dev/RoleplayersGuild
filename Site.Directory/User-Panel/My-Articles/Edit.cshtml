@page "{id:int?}"
@model RoleplayersGuild.Site.Directory.User_Panel.My_Articles.EditMyArticlesModel
@{
    ViewData["Title"] = Model.IsNewArticle ? "New Article" : "Edit Article";
    Layout = "_Layout2Col";
}

@section cphRightCol {
    @if (!string.IsNullOrEmpty(TempData["Message"] as string))
    {
        <div class="alert alert-info" role="alert">
            @TempData["Message"]
        </div>
    }

    <h1>@ViewData["Title"]</h1>
    <hr />

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <input type="hidden" asp-for="Input.ArticleId" />

        <div class="mb-3">
            <label asp-for="Input.ArticleTitle" class="form-label">Article Title</label>
            <input asp-for="Input.ArticleTitle" class="form-control" placeholder="(Required)" />
            <span asp-validation-for="Input.ArticleTitle" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Input.ArticleContent" class="form-label">Article Content</label>
            <textarea asp-for="Input.ArticleContent" class="form-control" rows="12"></textarea>
            <span asp-validation-for="Input.ArticleContent" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-md-4 mb-3">
                <label asp-for="Input.CategoryId" class="form-label">Category</label>
                <select asp-for="Input.CategoryId" asp-items="Model.Categories" class="form-select"></select>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="Input.UniverseId" class="form-label">Universe</label>
                <select asp-for="Input.UniverseId" asp-items="Model.Universes" class="form-select">
                    <option value="">(No Universe)</option>
                </select>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="Input.ContentRatingId" class="form-label">Content Rating</label>
                <select asp-for="Input.ContentRatingId" asp-items="Model.Ratings" class="form-select"></select>
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label">Genres</label>
            <div class="border rounded p-2" style="max-height: 200px; overflow-y: auto;">
                <div class="row">
                    @foreach (var genre in Model.GenreSelection)
                    {
                        <div class="col-md-4">
                            <div class="form-check">
                                <input type="checkbox" name="Input.SelectedGenreIds" value="@genre.GenreId" class="form-check-input" id="genre-@genre.GenreId" checked="@genre.IsSelected" />
                                <label class="form-check-label" for="genre-@genre.GenreId">@genre.GenreName</label>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="form-check form-switch mb-2">
            <input asp-for="Input.IsPrivate" class="form-check-input" />
            <label asp-for="Input.IsPrivate" class="form-check-label">Make this article private</label>
        </div>
        <div class="form-check form-switch mb-3">
            <input asp-for="Input.DisableLinkify" class="form-check-input" />
            <label asp-for="Input.DisableLinkify" class="form-check-label">Disable automatic links in content</label>
        </div>

        <hr />
        <div class="d-flex justify-content-between align-items-center mt-3">
            <div>
                @if (!Model.IsNewArticle)
                {
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">Delete Article</button>
                }
            </div>
            <div>
                <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">Save Article</button>
            </div>
        </div>
    </form>

    @if (!Model.IsNewArticle)
    {
        <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header bg-danger text-white">
                        <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        Are you sure you want to delete this article permanently? This action cannot be undone.
                    </div>
                    <div class="modal-footer">
                        <form method="post" asp-page-handler="Delete">
                            <input type="hidden" name="id" value="@Model.Input.ArticleId" />
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-danger">Delete Forever</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
}