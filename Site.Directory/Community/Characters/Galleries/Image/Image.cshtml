@page "{id:int}"
@model RoleplayersGuild.Site.Directory.Community.Characters.Galleries.Image.ImageModel
@using RoleplayersGuild.Site.Utils
@{
    ViewData["Title"] = $"Image from {Model.Image.CharacterDisplayName}'s Gallery";
    Layout = "_Layout1Col";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>Image from <a asp-page="/Community/Characters/View" asp-route-id="@Model.Image.CharacterId">@Model.Image.CharacterDisplayName</a>'s Gallery</h3>
    <div>
        @if (Model.IsOwner)
        {
            <a asp-page="/User-Panel/My-Characters/Edit" asp-fragment="gallery" asp-route-id="@Model.Image.CharacterId" class="btn btn-secondary">Edit Image</a>
        }
        <a asp-page="../Index" asp-route-characterId="@Model.Image.CharacterId" class="btn btn-primary">Back to Gallery</a>
    </div>
</div>

<div class="text-center mb-3">
    <img src="@Model.Image.CharacterImageUrl" class="img-fluid img-thumbnail @(Model.Image.IsMature ? "nsfw-image" : "")" alt="Gallery Image" />
</div>

@if (!string.IsNullOrEmpty(Model.Image.ImageCaption))
{
    <div class="alert alert-info">@Model.Image.ImageCaption</div>
}

<hr />
<h4>Comments</h4>

@if (Model.IsLoggedIn)
{
    @* FIXED: Changed bg-light to bg-body-tertiary to respect site themes *@
    <div class="card bg-body-tertiary my-3">
        <div class="card-body">
            <form method="post">
                <input type="hidden" asp-for="NewComment.ImageId" value="@Model.Image.CharacterImageId" />
                <div class="mb-3">
                    <textarea asp-for="NewComment.CommentText" class="form-control" rows="3" placeholder="Add a comment..."></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Post Comment</button>
            </form>
        </div>
    </div>
}

@if (!Model.Comments.Any())
{
    <p class="text-muted">There are no comments on this image yet.</p>
}
else
{
    foreach (var comment in Model.Comments)
    {
        <div class="d-flex align-items-start mb-3">
            <a asp-page="/Community/Characters/View" asp-route-id="@comment.CommenterCharacterId" class="me-3">
                @* IMPROVED: Added a fallback for the commenter's avatar *@
                <img src="@(comment.CharacterImageUrl ?? "/images/UserFiles/CharacterAvatars/NewAvatar.png")" width="50" height="50" class="rounded-circle" alt="Commenter's character image" />
            </a>
            <div>
                <a asp-page="/Community/Characters/View" asp-route-id="@comment.CommenterCharacterId" class="fw-bold text-decoration-none @comment.CharacterNameClass">@comment.CommenterUsername</a>
                <span class="text-muted small ms-2">@DateUtils.TimeAgo(comment.CommentTimestamp)</span>
                <p>@comment.CommentText</p>
            </div>
        </div>
    }
}