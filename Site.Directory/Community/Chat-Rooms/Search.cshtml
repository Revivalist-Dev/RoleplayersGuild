@page
@model RoleplayersGuild.Site.Directory.Community.Chat_Rooms.SearchModel
@{
    ViewData["Title"] = "Search Chat Rooms";
    Layout = "_Layout2Col";
}

@section cphLeftCol {
    @await Component.InvokeAsync("FilterNav", new { selectedGenreIds = Model.SelectedGenreIds })
}

@section cphRightCol {
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>@ViewData["Title"]</h1>
        @if (User.Identity?.IsAuthenticated == true)
        {
            <a asp-page="/User-Panel/My-Chat-Rooms/Edit" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> New Chat Room
            </a>
        }
    </div>
    <p class="lead text-muted">Find public chat rooms for in-character or out-of-character discussions.</p>

    <div class="card bg-light mb-4">
        <div class="card-body">
            <form method="get">
                @foreach (var genreId in Model.SelectedGenreIds)
                {
                    <input type="hidden" name="SelectedGenreIds" value="@genreId" />
                }
                <div class="input-group">
                    <input asp-for="SearchTerm" class="form-control form-control-lg" placeholder="Chat room name..." />
                    <button type="submit" class="btn btn-primary"><i class="bi bi-search"></i> Search</button>
                </div>
            </form>
        </div>
    </div>

    @if (Model.ChatRoomsResult is not null && Model.ChatRoomsResult.Items.Any())
    {
        <div class="list-group mb-3">
            @foreach (var room in Model.ChatRoomsResult.Items)
            {
                <a asp-page="./Room" asp-route-id="@room.ChatRoomId" class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1 text-truncate">@room.ChatRoomName</h5>
                        <small class="text-muted text-nowrap ms-3">@Model.GetTimeAgo(room.LastPostTime)</small>
                    </div>
                    <p class="mb-1 text-truncate small">@room.ChatRoomDescription</p>
                    <small class="text-muted">Rating: @room.ContentRating | Universe: @(room.UniverseName ?? "N/A")</small>
                </a>
            }
        </div>

        <partial name="_PagingControls" model="Model.ChatRoomsResult" />
    }
    else
    {
        <div class="text-center p-5 border rounded bg-light">
            <p class="h4 text-muted">No chat rooms found</p>
            <p>Try adjusting your search terms or filters.</p>
        </div>
    }
}