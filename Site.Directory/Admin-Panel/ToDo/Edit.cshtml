@page "{id:int}"
@model RoleplayersGuild.Site.Directory.Admin_Panel.ToDo.EditModel
@{
    ViewData["Title"] = "Edit To-Do Item";
}

<form method="post">
    <input type="hidden" asp-for="ToDoItem.ItemId" />

    <div class="row g-3">
        <div class="col-12">
            <label asp-for="ToDoItem.ItemName" class="form-label">Title</label>
            <input asp-for="ToDoItem.ItemName" class="form-control" />
            <span asp-validation-for="ToDoItem.ItemName" class="text-danger"></span>
        </div>
        <div class="col-12">
            <label asp-for="ToDoItem.ItemDescription" class="form-label">Description</label>
            <textarea asp-for="ToDoItem.ItemDescription" class="form-control" rows="5"></textarea>
            <span asp-validation-for="ToDoItem.ItemDescription" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="ToDoItem.StatusId" class="form-label">Status</label>
            <select asp-for="ToDoItem.StatusId" asp-items="Model.Statuses" class="form-select"></select>
        </div>
        <div class="col-md-4">
            <label asp-for="ToDoItem.TypeId" class="form-label">Type</label>
            <select asp-for="ToDoItem.TypeId" asp-items="Model.Types" class="form-select"></select>
        </div>
        <div class="col-md-4">
            <label asp-for="ToDoItem.AssignedToUserId" class="form-label">Assigned To</label>
            <select asp-for="ToDoItem.AssignedToUserId" asp-items="Model.AssignableUsers" class="form-select">
                <option value="">No One</option>
            </select>
        </div>
        <div class="col-12 d-flex justify-content-end gap-2 mt-4">
            <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
    </div>
</form>