@page "{id:int?}"
@model RoleplayersGuild.Site.Directory.Admin_Panel.Universes.IndexModel
@{
    ViewData["Title"] = "Manage Universes";
    Layout = "_Layout2Col";
}

<p><a asp-page="../Index">&laquo;&nbsp;Back to Admin Console</a></p>

<div class="row">
    <div class="col-md-3">
        <div class="list-group">
            @foreach (var universe in Model.AllUniverses)
            {
                var activeClass = (Model.Universe?.UniverseId == universe.UniverseId) ? "active" : "";
                <a asp-page="/Admin-Panel/Universes/Index" asp-route-id="@universe.UniverseId" class="list-group-item list-group-item-action @activeClass">
                    @universe.UniverseName
                </a>
            }
        </div>
    </div>
    <div class="col-md-9">
        @if (!string.IsNullOrEmpty(Model.Message))
        {
            var alertClass = Model.IsSuccess ? "alert-success" : "alert-danger";
            <div class="alert @alertClass" role="alert">
                @Model.Message
            </div>
        }

        @if (Model.Universe != null)
        {
            <a asp-page="/Community/Universes/View" asp-route-id="@Model.Universe.UniverseId" target="_blank">Visit Universe &raquo;</a>

            <form method="post" asp-page-handler="Save">
                <input type="hidden" asp-for="Universe.UniverseId" />

                <div class="my-3">
                    <label asp-for="Universe.Name" class="form-label">Universe Name</label>
                    <input asp-for="Universe.Name" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="Universe.Description" class="form-label">Description</label>
                    <textarea asp-for="Universe.Description" class="form-control" rows="8"></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label">Genres</label>
                    <div class="border rounded p-2" style="max-height: 200px; overflow-y: auto;">
                        @for (var i = 0; i < Model.Genres.Count; i++)
                        {
                            <div class="form-check">
                                <input type="checkbox" asp-for="Genres[i].IsSelected" class="form-check-input" />
                                <label asp-for="Genres[i].IsSelected" class="form-check-label">@Model.Genres[i].GenreName</label>
                                <input type="hidden" asp-for="Genres[i].GenreId" />
                                <input type="hidden" asp-for="Genres[i].GenreName" />
                            </div>
                        }
                    </div>
                </div>
                <div class="mb-3">
                    <label asp-for="Universe.SourceTypeId" class="form-label">Content Source</label>
                    <select asp-for="Universe.SourceTypeId" class="form-select">
                        <option value="1">Original</option>
                        <option value="2">Fan-Fic</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label asp-for="Universe.ContentRatingId" class="form-label">Content Rating</label>
                    <select asp-for="Universe.ContentRatingId" class="form-select">
                        <option value="1">SFW</option>
                        <option value="2">NSFW</option>
                    </select>
                </div>

                @if (Model.Universe.OwnerUserId > 0)
                {
                    <div class="mb-3">
                        Owned by: <a asp-page="/Admin-Panel/Users/Index" asp-route-id="@Model.Universe.OwnerUserId">@Model.Universe.OwnerUsername</a>
                    </div>
                }
                @if (Model.Universe.SubmittedByUserId > 0)
                {
                    <div class="mb-3">
                        Submitted by: <a asp-page="/Admin-Panel/Users/Index" asp-route-id="@Model.Universe.SubmittedByUserId">@Model.Universe.SubmittedByUsername</a>
                    </div>
                }

                <div class="form-check mb-3">
                    <input asp-for="Universe.IsApproved" class="form-check-input" />
                    <label asp-for="Universe.IsApproved" class="form-check-label">Universe is approved.</label>
                </div>

                <div class="d-flex justify-content-between my-3">
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#DeleteUniverseModal">Delete Universe</button>
                    <button type="submit" class="btn btn-success">Save Universe</button>
                </div>
            </form>

            <div class="modal fade" id="DeleteUniverseModal" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header"><h5 class="modal-title">Are you sure?</h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
                        <div class="modal-body"><p>Are you sure you want to delete this universe?</p></div>
                        <div class="modal-footer">
                            <form method="post" asp-page-handler="Delete" asp-route-id="@Model.Universe.UniverseId">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-danger">Delete Universe</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-info">Please select a universe from the list to manage it.</div>
        }
    </div>
</div>