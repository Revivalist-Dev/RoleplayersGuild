@page "{SearchStoryId:int?}"
@model RoleplayersGuild.Site.Directory.Admin_Panel.Stories.IndexModel
@{
    ViewData["Title"] = "Manage Stories";
}

<div class="row">
    <div class="col-md-3">
        <p><a asp-page="../Index">&laquo;&nbsp;Back to Admin Console</a></p>
        <form method="get">
            <div class="mb-3">
                <label asp-for="SearchStoryId" class="form-label">Story ID</label>
                <input asp-for="SearchStoryId" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Get Story</button>
        </form>
    </div>
    <div class="col-md-9">
        @if (!string.IsNullOrEmpty(Model.Message))
        {
            var alertClass = Model.IsSuccess ? "alert-success" : "alert-danger";
            <div class="alert @alertClass" role="alert">
                @Model.Message
            </div>
        }

        @if (Model.Story != null)
        {
            <h1>@Model.Story.Title</h1>

            <div class="my-3">
                <a class="btn btn-info" asp-page="/Community/Stories/View" asp-route-id="@Model.Story.StoryId" target="_blank">View Story</a>
            </div>

            <form id="storyForm" method="post" asp-page-handler="Save">
                <input type="hidden" asp-for="Story.StoryId" />
                <input type="hidden" asp-for="Story.UserId" />

                <div class="mb-3">
                    <label asp-for="Story.Title">Story Title</label>
                    <input asp-for="Story.Title" class="form-control" />
                    <span asp-validation-for="Story.Title" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Story.Description">Story Description</label>
                    <textarea asp-for="Story.Description" class="form-control" rows="8"></textarea>
                </div>
                <div class="mb-3">
                    Owner: <a asp-page="/Admin-Panel/Users/Index" asp-route-id="@Model.Story.UserId">View Owner</a>
                </div>
                <div class="mb-3">
                    <label asp-for="Story.UniverseId">Universe</label>
                    <select asp-for="Story.UniverseId" asp-items="Model.Universes" class="form-select">
                        <option value="0">No Universe Selected</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label asp-for="Story.ContentRatingId">Content Rating</label>
                    <select asp-for="Story.ContentRatingId" class="form-select">
                        <option value="1">SFW</option>
                        <option value="2">NSFW</option>
                        <option value="3">XXX</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label">Genres</label>
                    <div class="border rounded p-2" style="max-height: 200px; overflow-y: auto;">
                        @for (var i = 0; i < Model.Genres.Count; i++)
                        {
                            <div class="form-check">
                                <input type="checkbox" asp-for="Genres[i].IsSelected" class="form-check-input" />
                                <label asp-for="Genres[i].IsSelected" class="form-check-label">@Model.Genres[i].GenreName</label>
                                <input type="hidden" asp-for="Genres[i].GenreId" />
                                <input type="hidden" asp-for="Genres[i].GenreName" />
                            </div>
                        }
                    </div>
                </div>
                <div class="form-check mb-3">
                    <input asp-for="Story.IsPrivate" class="form-check-input" />
                    <label asp-for="Story.IsPrivate" class="form-check-label">This Story should not be listed publicly.</label>
                </div>

                <div class="d-flex justify-content-between my-3">
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#DeleteStoryModal">Delete Story</button>
                    <button type="submit" class="btn btn-primary">Save Story</button>
                </div>
            </form>

            <div class="modal fade" id="DeleteStoryModal" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header"><h5 class="modal-title">Are you sure?</h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
                        <div class="modal-body"><p>Are you sure you want to delete this Story?</p></div>
                        <div class="modal-footer">
                            <form method="post" asp-page-handler="Delete" asp-route-id="@Model.Story.StoryId">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-danger">Delete Story</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="~/vendor/are-you-sure.min.js"></script>
    <script>
        $(function () {
            $('#storyForm').areYouSure();
        });
    </script>
}
