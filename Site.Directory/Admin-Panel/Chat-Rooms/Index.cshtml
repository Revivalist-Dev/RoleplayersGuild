@page "{id:int?}"
@model RoleplayersGuild.Site.Directory.Admin_Panel.Chat_Rooms.IndexModel
@{
    ViewData["Title"] = "Manage Chat Rooms";
    Layout = "_Layout2Col";
}

<p><a asp-page="../Index">&laquo;&nbsp;Back to Admin Console</a></p>

<div class="row">
    <div class="col-md-3">
        <div class="list-group">
            @foreach (var room in Model.AllChatRooms)
            {
                var activeClass = (Model.ChatRoom?.ChatRoomId == room.ChatRoomId) ? "active" : "";
                <a asp-page="/Admin-Panel/Chat-Rooms/Index" asp-route-id="@room.ChatRoomId" class="list-group-item list-group-item-action @activeClass">
                    @room.ChatRoomName
                </a>
            }
        </div>
    </div>
    <div class="col-md-9">
        @if (!string.IsNullOrEmpty(Model.Message))
        {
            var alertClass = Model.IsSuccess ? "alert-success" : "alert-danger";
            <div class="alert @alertClass" role="alert">
                @Model.Message
            </div>
        }

        @if (Model.ChatRoom != null)
        {
            <a asp-page="/Community/Chat-Rooms/Room" asp-route-id="@Model.ChatRoom.ChatRoomId" target="_blank">Visit Chat Room &raquo;</a>

            <form method="post" asp-page-handler="Save">
                <input type="hidden" asp-for="ChatRoom.ChatRoomId" />

                <div class="my-3">
                    <label asp-for="ChatRoom.Name" class="form-label">Chat Room Name</label>
                    <input asp-for="ChatRoom.Name" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="ChatRoom.Description" class="form-label">Description</label>
                    <textarea asp-for="ChatRoom.Description" class="form-control" rows="8"></textarea>
                </div>
                <div class="mb-3">
                    <label asp-for="ChatRoom.ContentRatingId" class="form-label">Content Rating</label>
                    <select asp-for="ChatRoom.ContentRatingId" class="form-select">
                        <option value="1">SFW</option>
                        <option value="2">NSFW</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label asp-for="ChatRoom.UniverseId" class="form-label">Universe</label>
                    <select asp-for="ChatRoom.UniverseId" asp-items="Model.Universes" class="form-select">
                        <option value="0">OOC (None)</option>
                    </select>
                </div>
                @if (Model.ChatRoom.SubmittedByUserId.HasValue)
                {
                    <div class="mb-3">
                        Submitted by: <a asp-page="/Admin-Panel/Users/Index" asp-route-id="@Model.ChatRoom.SubmittedByUserId">@Model.ChatRoom.SubmittedByUsername</a>
                    </div>
                }
                <div class="form-check mb-3">
                    <input asp-for="ChatRoom.IsApproved" class="form-check-input" />
                    <label asp-for="ChatRoom.IsApproved" class="form-check-label">Chat Room is approved.</label>
                </div>

                <div class="d-flex justify-content-between my-3">
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#DeleteChatRoomModal">Delete Chat Room</button>
                    <button type="submit" class="btn btn-success">Save Chat Room</button>
                </div>
            </form>

            <hr />

            <h2 class="mt-4">User Locking</h2>
            <form method="post" asp-page-handler="LockUser" asp-route-id="@Model.ChatRoom.ChatRoomId" class="row g-3 align-items-end">
                <div class="col-auto">
                    <label asp-for="UserIdToLock" class="form-label">User ID to Lock</label>
                    <input asp-for="UserIdToLock" type="number" class="form-control" />
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-danger">Lock User Out</button>
                </div>
            </form>

            <ul class="list-group mt-3">
                @foreach (var user in Model.LockedUsers)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <a asp-page="/Admin-Panel/Users/Index" asp-route-id="@user.UserId">@user.Username</a>
                        <form method="post" asp-page-handler="UnlockUser" asp-route-id="@Model.ChatRoom.ChatRoomId" asp-route-userId="@user.UserId">
                            <button type="submit" class="btn btn-sm btn-warning">Unlock</button>
                        </form>
                    </li>
                }
            </ul>

            <hr />

            <h2 class="mt-4">Chat Purging</h2>
            <p>This will delete all posts in the chat room permanently.</p>
            <form method="post" asp-page-handler="Purge" asp-route-id="@Model.ChatRoom.ChatRoomId">
                <button type="submit" class="btn btn-danger">Purge Chat Room</button>
            </form>

            <div class="modal fade" id="DeleteChatRoomModal" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header"><h5 class="modal-title">Are you sure?</h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
                        <div class="modal-body"><p>Are you sure you want to delete this Chat Room?</p></div>
                        <div class="modal-footer">
                            <form method="post" asp-page-handler="Delete" asp-route-id="@Model.ChatRoom.ChatRoomId">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-danger">Delete Chat Room</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-info">Please select a chat room from the list to manage it.</div>
        }
    </div>
</div>