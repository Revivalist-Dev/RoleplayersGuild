@model RoleplayersGuild.Site.Model.SiteFooterViewModel

<!-- Site footer -->
<footer class="site-footer">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-sm-12 col-md-6">
                @await Component.InvokeAsync("AdBanner", new { adType = "Leaderboard" })
                <div class="my-3"></div> @* Spacer between ads *@
                @await Component.InvokeAsync("AdBanner", new { adType = "Leaderboard" })
            </div>

            <div class="col-xs-6 col-md-3">
                <h6>Information</h6>
                <ul class="footer-links">
                    <li><a asp-page="/Information/About/Index">About Us</a></li>
                    <li><a asp-page="/Information/Contact/Index">Contact Us</a></li>
                    <li><a asp-page="/Information/Rules/Index">Site Rules</a></li>
                    <li><a asp-page="/Information/Legal/Terms-Of-Use/Terms-Of-Use">Terms of Service</a></li>
                    <li><a asp-page="/Information/Sitemap/Index">Sitemap</a></li>
                </ul>
            </div>

            <div class="col-xs-6 col-md-3">
                <h6>Community</h6>
                <ul class="footer-links">
                    <li><a asp-page="/Information/FAQ/Index">FAQ</a></li>
                    <li><a asp-page="/Information/Badges/Index">Badges</a></li>
                    <li><a asp-page="/Information/Testimonials/Index">Testimonials</a></li>
                    <li><a asp-page="/Information/Functionality-Voting/Index">Feature Voting</a></li>
                    <li><a asp-page="/Information/Donations/Index">Donate</a></li>
                </ul>
            </div>
        </div>
        <hr>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-sm-6 col-xs-12">
                <p class="copyright-text">
                    Copyright &copy; 2024 - @Model.CurrentYear All Rights Reserved by
                    <a href="#">RoleplayersGuild</a>.
                    <a asp-page="/Account-Panel/AdRecovery" class="footer-links d-block mt-2">Already a subscriber?</a>
                </p>
            </div>

            <div class="col-md-4 col-sm-6 col-xs-12">
                <ul class="social-icons">
                    <li><a class="twitter" href="https://x.com/RPers_Guild" target="_blank" aria-label="Follow us on X"><i class="bi bi-twitter-x"></i></a></li>
                    <li><a class="reddit" href="https://www.reddit.com/r/RolePlayersGuild/" target="_blank" aria-label="Join our Subreddit"><i class="bi bi-reddit"></i></a></li>
                    <li><a class="discord" href="https://discord.gg/bWXBvCUBew" target="_blank" aria-label="Join our Discord server"><i class="bi bi-discord"></i></a></li>
                </ul>
            </div>
        </div>
    </div>
</footer>