@model RoleplayersGuild.Site.Services.ViewComponents.AdBannerViewModel

@if (Model.IsDevelopment)
{
    @* In the Development environment, show a styled placeholder to test layout. *@
    @if (Model.AdType == "Leaderboard")
    {
        <div class="ad-placeholder text-center mb-3" style="background-color: #4a4e54; border: 1px dashed #6c757d; padding: 20px; min-height: 90px; display: flex; align-items: center; justify-content: center;">
            <small class="text-white-50">Ad Placeholder (Leaderboard - 728x90)</small>
        </div>
    }
    else
    {
        <div class="ad-placeholder text-center mb-3 mx-auto" style="background-color: #4a4e54; border: 1px dashed #6c757d; padding: 20px; min-height: 250px; display: flex; align-items: center; justify-content: center; max-width: 300px;">
            <small class="text-white-50">Ad Placeholder (Box - 300x250)</small>
        </div>
    }
}
else
{
    @* In Production, render the actual Google AdSense ad unit. *@
    @* IMPORTANT: You will need to create different ad units in AdSense for each size and use the AdType to select the correct data-ad-slot ID. *@
    <div class="ad-banner text-center mb-3">
        <ins class="adsbygoogle"
             style="display:block"
             data-ad-client="ca-pub-6220312574026916"
             data-ad-slot="YYYYYYYYYY" @* TODO: Replace with a real ad slot ID based on AdType *@
             data-ad-format="auto"
             data-full-width-responsive="true"></ins>
        <script>
            (adsbygoogle = window.adsbygoogle || []).push({});
        </script>
    </div>
}