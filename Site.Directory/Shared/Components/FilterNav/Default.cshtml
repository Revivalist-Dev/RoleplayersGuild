@model RoleplayersGuild.Site.Model.FilterNavViewModel

<form method="get" class="mt-3">
    <input type="hidden" name="CurrentPage" value="1" />
    <div class="mb-3">
        <label class="form-label">Filter by Genres</label>
        <div class="card">
            <div class="list-group list-group-flush ScrollingListGroup">
                @foreach (var genre in Model.AllGenres)
                {
                    <label class="list-group-item">
                        <input type="checkbox" class="form-check-input me-1" name="SearchInput.SelectedGenreIds" value="@genre.GenreId"
                               id="genre-@genre.GenreId" @(genre.IsSelected ? "checked" : "")>
                        @genre.GenreName
                    </label>
                }
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-info w-100">Apply Filters</button>
</form>