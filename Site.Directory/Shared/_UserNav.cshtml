@model RoleplayersGuild.Site.Model.UserNavViewModel
@inject RoleplayersGuild.Site.Services.IUserService _userService

<div class="user-nav-panel">
    @if (Model.IsAuthenticated)
    {
        <div class="accordion accordion-flush" id="userNavAccordion">
            @if (Model.TotalNotificationCount > 0)
            {
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headerNotifications"><button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseNotifications">Notifications <span class="badge bg-danger ms-2">@Model.TotalNotificationCount</span></button></h2>
                    <div id="collapseNotifications" class="accordion-collapse collapse">
                        <div class="list-group list-group-flush">
                            @if (Model.UnreadThreadCount > 0)
                            {
                                <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" asp-page="/User-Panel/My-Threads/Index">My Threads <span class="badge rounded-pill bg-danger">@Model.UnreadThreadCount</span></a>
                            }
                            @if (Model.UnreadImageCommentCount > 0)
                            {
                                <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" asp-page="/User-Panel/My-Characters/My-Galleries/Index">Gallery Comments <span class="badge rounded-pill bg-danger">@Model.UnreadImageCommentCount</span></a>
                            }
                            @if (Model.AdminOpenItemCount > 0)
                            {
                                <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" asp-page="/Admin-Panel/Characters/Characters-Under-Review/Index">Character Approvals <span class="badge rounded-pill bg-danger">@Model.AdminOpenItemCount</span></a>
                            }
                        </div>
                    </div>
                </div>
            }
            <div class="accordion-item">
                <h2 class="accordion-header" id="headerPersonal"><button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapsePersonal">Personal</button></h2>
                <div id="collapsePersonal" class="accordion-collapse collapse">
                    <div class="list-group list-group-flush">
                        <a class="list-group-item list-group-item-action" asp-page="/User-Panel/Index">User Panel</a>
                        <div class="list-group-item">
                            <span class="fw-bold">Profile & Content</span>
                            <div class="list-group list-group-flush mt-2">
                                <a class="list-group-item list-group-item-action" asp-page="/User-Panel/My-Profile/Index">My Profile</a>
                                <a class="list-group-item list-group-item-action" asp-page="/User-Panel/My-Articles/Index">My Articles</a>
                                <a class="list-group-item list-group-item-action" asp-page="/User-Panel/My-Characters/Index">My Characters</a>
                                <a class="list-group-item list-group-item-action" asp-page="/User-Panel/My-Chat-Rooms/Index">My Chat Rooms</a>
                                <a class="list-group-item list-group-item-action" asp-page="/User-Panel/My-Proposals/Index">My Proposals</a>
                                <a class="list-group-item list-group-item-action" asp-page="/User-Panel/My-Stories/Index">My Stories</a>
                                <a class="list-group-item list-group-item-action" asp-page="/User-Panel/My-Threads/Index">My Threads</a>
                                <a class="list-group-item list-group-item-action" asp-page="/User-Panel/My-Universes/Index">My Universes</a>
                            </div>
                        </div>
                        <div class="list-group-item">
                            <span class="fw-bold">Account & Settings</span>
                            <div class="list-group list-group-flush mt-2">
                                <a class="list-group-item list-group-item-action" asp-page="/Account-Panel/Settings/Index">Account Settings</a>
                                <a class="list-group-item list-group-item-action" asp-page="/Account-Panel/Password/Change-Password">Change Password</a>
                                <a class="list-group-item list-group-item-action" asp-page="/Account-Panel/Membership/Index">Membership</a>
                                <a class="list-group-item list-group-item-action" asp-page="/Account-Panel/Quick-Links/Index">Manage Quick Links</a>
                            </div>
                        </div>
                        <a class="list-group-item list-group-item-action" asp-page="/Account-Panel/Logout/Index">Log Out</a>
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header" id="headerCommunity"><button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseCommunity">Community</button></h2>
                <div id="collapseCommunity" class="accordion-collapse collapse">
                    <div class="list-group list-group-flush">
                        <a class="list-group-item list-group-item-action" asp-page="/Community/Articles/Search">Articles</a>
                        <a class="list-group-item list-group-item-action" asp-page="/Community/Characters/Search">Characters</a>
                        <a class="list-group-item list-group-item-action" asp-page="/Community/Chat-Rooms/Search">Chat Rooms</a>
                        <a class="list-group-item list-group-item-action" asp-page="/Community/Proposals/Search">Proposals</a>
                        <a class="list-group-item list-group-item-action" asp-page="/Community/Stories/Search">Stories</a>
                        <a class="list-group-item list-group-item-action" asp-page="/Community/Universes/Search">Universes</a>
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header" id="headerMarket"><button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseMarket">Market</button></h2>
                <div id="collapseMarket" class="accordion-collapse collapse">
                    <div class="list-group list-group-flush">
                        <a class="list-group-item list-group-item-action" asp-page="/Market/Commissions/Artists/Index">Artist Commissions</a>
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header" id="headerQuickLinks"><button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseQuickLinks">Quick Links</button></h2>
                <div id="collapseQuickLinks" class="accordion-collapse collapse">
                    <div class="list-group list-group-flush">
                        @if (Model.QuickLinks.Any())
                        {
                            @foreach (var link in Model.QuickLinks)
                            {
                                <a href="@link.LinkAddress" target="_blank" rel="noopener noreferrer" class="list-group-item list-group-item-action">@link.LinkName</a>
                            }
                        }
                        else
                        {
                            <a asp-page="/Account-Panel/Quick-Links/Index" class="list-group-item list-group-item-action text-center" title="You have no quick links. Click to add some."><i class="bi bi-question-lg"></i></a>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="user-nav-footer">
            <div class="d-flex justify-content-center align-items-center h-100">
                <a href="#" id="userNavPinToggle" class="user-nav-settings" title="Switch Dock Side">
                    <i class="bi bi-arrow-left-right"></i>
                </a>
                @if (await _userService.IsCurrentUserStaffAsync())
                {
                    <a asp-page="/Admin-Panel/Index" class="user-nav-settings" title="Admin Panel">
                        <i class="bi bi-shield-lock-fill"></i>
                    </a>
                }
            </div>
        </div>
    }
    else
    {
        @* Unauthenticated User Nav *@
        <div class="accordion accordion-flush" id="userNavAccordion">
            <div class="accordion-item">
                <h2 class="accordion-header"><button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseNav">Navigation</button></h2>
                <div id="collapseNav" class="accordion-collapse collapse">
                    <div class="list-group list-group-flush">
                        <a class="list-group-item list-group-item-action" asp-page="/Index"><strong>RPG Home</strong></a>
                        <a class="list-group-item list-group-item-action" asp-page="/Information/About/Index">About</a>
                        <a class="list-group-item list-group-item-action" asp-page="/Information/Rules/Index">Rules</a>
                        <a class="list-group-item list-group-item-action" asp-page="/Community/Articles/Search">Articles</a>
                        <a class="list-group-item list-group-item-action" asp-page="/Community/Characters/Search">Characters</a>
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header"><button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseAccount">Account</button></h2>
                <div id="collapseAccount" class="accordion-collapse collapse">
                    <div class="list-group list-group-flush">
                        <a class="list-group-item list-group-item-action" asp-page="/Index">Login</a>
                        <a class="list-group-item list-group-item-action" asp-page="/Account-Panel/Register">Register</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>